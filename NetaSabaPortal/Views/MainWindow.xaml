<Window x:Class="NetaSabaPortal.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetaSabaPortal"
        xmlns:viewModels="clr-namespace:NetaSabaPortal.ViewModels"
        xmlns:converter="clr-namespace:NetaSabaPortal.Views.Converters"
        mc:Ignorable="d"
        Title="NetaSaba Portal" Height="450" Width="800">
    <!--<Window.DataContext>
        <viewModels:MainWindowVM x:Name="vm"/>
    </Window.DataContext>-->
    <Window.Resources>
        <converter:BooleanToGreenRedColorConverter x:Key="BooleanToGreenRedColorConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <TabControl>
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🍥" Foreground="Pink" />
                    <TextBlock Text="Location Settings" />
                </StackPanel>
            </TabItem.Header>
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <StackPanel   Grid.Row="0" Grid.Column="0" Margin="1"  Orientation="Horizontal">
                    <TextBlock Text="🍥"/>
                    <TextBlock Text="Steam Path:" />
                </StackPanel>
                <TextBox Grid.Row="1" Grid.Column="0" Margin="1" Text="{Binding SteamPath}" Background="{Binding IsSteamPathValid, Converter={StaticResource BooleanToGreenRedColorConverter}}" />
                <Button Grid.Row="1" Grid.Column="1" Margin="1" Command="{Binding BrowseCommand}" CommandParameter="steam">Browse</Button>
                <Button Grid.Row="1" Grid.Column="2" Margin="1" Command="{Binding AutoCommand}" CommandParameter="steam">Auto</Button>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
